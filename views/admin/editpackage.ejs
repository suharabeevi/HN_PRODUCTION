<!DOCTYPE html>
<html lang="en-US">
<head>
  <meta charset="utf-8" />
  <title>Edit Package | Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
  <link rel="stylesheet" href="/app/css/app.css" />
  <link rel="stylesheet" href="/app/css/map.min.css" />
  <%- include('../layouts/admin/favicon.ejs') %>
</head>
<body class="body header-fixed">
  

  <div id="wrapper">
    <div id="pagee" class="clearfix">
      <%- include('../layouts/admin/sideheader.ejs') %>

      <main id="main">
        <section class="profile-dashboard">
          <section class="form-add-tour">
            <div class="widget-dash-board pr-256 mb-75">
              <div class="inner-header mb-40 flex justify-space align-center">
                <h3 class="title">Edit Package</h3>
                <a href="/admin/packages" class="btn btn-outline-secondary btn-sm">
                  Back to Packages
                </a>
              </div>

              <div class="grid-input-2 mb-20">
                <div class="input-wrap">
                  <label>Main Category *</label>
                  <select id="category-id" required>
                    <option value="">Select Category</option>
                    <% categories.forEach(c => { %>
                      <option value="<%= c._id %>" <%= pkg.category && pkg.category._id.toString() === c._id.toString() ? 'selected' : '' %>>
                        <%= c.name %>
                      </option>
                    <% }) %>
                  </select>
                </div>
                <div class="input-wrap">
                  <label>Package Name *</label>
                  <input
                    type="text"
                    id="package-name"
                    value="<%= pkg.name %>"
                    required
                  />
                </div>
              </div>

              <div class="grid-input-2 mb-20">
                <div class="input-wrap">
                  <label>Price *</label>
                  <input type="number" id="package-price" value="<%= pkg.price %>" step="0.01" required />
                </div>
                <div class="input-wrap">
                  <label>Currency</label>
                  <select id="package-currency">
                    <option value="GBP" <%= pkg.currency === 'GBP' ? 'selected' : '' %>>GBP (£)</option>
                    <option value="USD" <%= pkg.currency === 'USD' ? 'selected' : '' %>>USD ($)</option>
                    <option value="EUR" <%= pkg.currency === 'EUR' ? 'selected' : '' %>>EUR (€)</option>
                  </select>
                </div>
              </div>

              <div class="input-wrap mb-20">
                <label>Description (optional)</label>
                <textarea
                  id="package-description"
                  rows="3"
                ><%= pkg.description || '' %></textarea>
              </div>

              <div class="inner-header mb-20">
                <h4 class="title">Package Features</h4>
                <p class="text-muted">Add or edit features for this package</p>
              </div>

              <div id="features-container">
                <!-- Dynamic feature fields will be added here -->
              </div>

              <div class="mb-20">
                <button type="button" class="btn btn-secondary btn-sm" onclick="addFeatureField()">
                  + Add Feature
                </button>
              </div>

              <!-- Existing media -->
              <div class="inner-header mb-20">
                <h4 class="title">Existing Media</h4>
                <p class="text-muted">Current images and videos for this package.</p>
              </div>

              <div class="grid-input-2 mb-20">
                <div class="input-wrap">
                  <% if (pkg.images && pkg.images.length) { %>
                    <div class="flex wrap">
                      <% pkg.images.forEach(img => { %>
                        <div class="mr-10 mb-10" style="position: relative; display: inline-block;">
                          <img src="<%= img %>" style="width: 100px; height: 100px; object-fit: cover;" />
                          <button
                            type="button"
                            class="btn btn-danger btn-xs"
                            style="position:absolute;top:2px;right:2px;padding:2px 5px;font-size:10px;"
                            onclick="deletePackageImage('<%= pkg._id %>', '<%= img %>')"
                          >
                            X
                          </button>
                        </div>
                      <% }) %>
                    </div>
                  <% } else { %>
                    <p class="text-muted">No images uploaded.</p>
                  <% } %>
                </div>
                <div class="input-wrap">
                  <% if (pkg.videos && pkg.videos.length) { %>
                    <ul>
                      <% pkg.videos.forEach(v => { %>
                        <li><a href="<%= v %>" target="_blank"><%= v %></a></li>
                      <% }) %>
                    </ul>
                  <% } else { %>
                    <p class="text-muted">No videos added.</p>
                  <% } %>
                </div>
              </div>

              <!-- Optional media upload -->
              <div class="inner-header mb-20">
                <h4 class="title">Media (optional)</h4>
                <p class="text-muted">Images can be uploaded, videos are YouTube URLs.</p>
              </div>

              <div class="grid-input-2 mb-20">
                <div class="input-wrap">
                  <label>Images (optional)</label>
                  <input type="file" id="package-images" multiple accept="image/*" />
                </div>
                <div class="input-wrap">
                  <label>YouTube Video URLs (optional)</label>
                  <div id="video-url-container"></div>
                  <button type="button" class="btn btn-secondary btn-sm mt-10" id="add-video-url-btn">
                    + Add YouTube URL
                  </button>
                </div>
              </div>

              <div class="input-wrap">
                <button type="button" class="button-add">Update Package</button>
              </div>
            </div>
          </section>
        </section>
      </main>

      <%- include('../layouts/admin/footer.ejs') %>
    </div>
  </div>

  <a id="scroll-top" class="button-go"></a>

  <script src="/app/js/jquery.min.js"></script>
  <script src="/app/js/bootstrap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    let featureCount = 0;
    const existingFeatures = <%- JSON.stringify(pkg.features || []) %>;

    function addFeatureField(label = '', value = '') {
      featureCount++;
      const container = document.getElementById('features-container');
      const featureDiv = document.createElement('div');
      featureDiv.className = 'grid-input-2 mb-15 feature-row';
      featureDiv.innerHTML = `
        <div class="input-wrap">
          <label>Feature Label</label>
          <input type="text" class="feature-label" placeholder="e.g. Session Duration" value="${label}" />
        </div>
        <div class="input-wrap">
          <label>Feature Value</label>
          <div class="flex align-center">
            <input type="text" class="feature-value" placeholder="e.g. 1 hour" value="${value}" />
            <button type="button" class="btn btn-danger btn-sm ml-10" onclick="removeFeatureField(this)">Remove</button>
          </div>
        </div>
      `;
      container.appendChild(featureDiv);
    }

    function removeFeatureField(btn) {
      btn.closest('.feature-row').remove();
    }

    // Load existing features
    document.addEventListener('DOMContentLoaded', () => {
      if (existingFeatures && existingFeatures.length > 0) {
        existingFeatures.forEach(f => {
          addFeatureField(f.label, f.value);
        });
      } else {
        addFeatureField('', '');
      }

      // Load existing YouTube video URLs
      const existingVideos = <%- JSON.stringify(pkg.videos || []) %>;
      if (existingVideos.length > 0) {
        existingVideos.forEach(v => addVideoUrlField(v));
      } else {
        addVideoUrlField('');
      }
    });

    function addVideoUrlField(value = '') {
      const container = document.getElementById('video-url-container');
      const wrap = document.createElement('div');
      wrap.className = 'mb-10 flex align-center video-url-row';
      wrap.innerHTML = `
        <input type="text" class="video-url-input" placeholder="https://www.youtube.com/..." value="${value}" style="flex:1" />
        <button type="button" class="btn btn-danger btn-sm ml-10" onclick="this.parentElement.remove()">Remove</button>
      `;
      container.appendChild(wrap);
    }

    document.getElementById('add-video-url-btn').addEventListener('click', () => {
      addVideoUrlField();
    });

    async function deletePackageImage(id, imageUrl) {
      try {
        const res = await fetch(`/admin/packages/${id}/image?imageUrl=${encodeURIComponent(imageUrl)}`, {
          method: 'DELETE',
        });
        const data = await res.json();
        if (res.ok) {
          Swal.fire('Success', data.message, 'success').then(() => {
            window.location.reload();
          });
        } else {
          Swal.fire('Error', data.message || 'Failed to delete image', 'error');
        }
      } catch (err) {
        console.error(err);
        Swal.fire('Error', 'Unexpected error occurred', 'error');
      }
    }

    document.querySelector('.button-add').addEventListener('click', async () => {
      const categoryId = document.querySelector('#category-id').value;
      const name = document.querySelector('#package-name').value.trim();
      const price = document.querySelector('#package-price').value;
      const currency = document.querySelector('#package-currency').value || 'GBP';
      const description = document.querySelector('#package-description').value.trim();

      if (!categoryId || !name || !price) {
        return Swal.fire('Error', 'Category, name and price are required', 'error');
      }

      // Collect features
      const featureRows = document.querySelectorAll('.feature-row');
      const features = [];
      featureRows.forEach((row) => {
        const label = row.querySelector('.feature-label').value.trim();
        const value = row.querySelector('.feature-value').value.trim();
        if (label && value) {
          features.push({ label, value });
        }
      });

      try {
        const formData = new FormData();
        formData.append('categoryId', categoryId);
        formData.append('name', name);
        formData.append('price', Number(price));
        formData.append('currency', currency);
        formData.append('description', description);
        formData.append('features', JSON.stringify(features));

        // Optional images
        const imagesInput = document.getElementById('package-images');
        if (imagesInput && imagesInput.files && imagesInput.files.length > 0) {
          Array.from(imagesInput.files).forEach((file) => {
            formData.append('images', file);
          });
        }

        // Optional YouTube video URLs (always send, even if empty, to allow clearing)
        const videoRows = document.querySelectorAll('.video-url-row .video-url-input');
        const videoUrls = [];
        videoRows.forEach((input) => {
          const v = input.value.trim();
          if (v) videoUrls.push(v);
        });
        // Always send videos field, even if empty array, so we can update/clear existing videos
        formData.append('videos', JSON.stringify(videoUrls));

        const res = await fetch('/admin/packages/<%= pkg._id %>', {
          method: 'PUT',
          body: formData,
        });

        const data = await res.json();
        if (res.ok) {
          Swal.fire('Success', data.message, 'success').then(() => {
            window.location.href = '/admin/packages';
          });
        } else {
          Swal.fire('Error', data.message || 'Failed to update package', 'error');
        }
      } catch (err) {
        console.error(err);
        Swal.fire('Error', 'Unexpected error occurred', 'error');
      }
    });
  </script>
</body>
</html>

